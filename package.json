{
  "name": "@diva.exchange/diva",
  "version": "0.1.0",
  "description": "diva - Distributed value exchange upholding security, reliability and privacy",
  "keywords": [
    "distributed",
    "value",
    "exchange",
    "crypto",
    "asset"
  ],
  "author": "Konrad Baechler <konrad@diva.exchange> (https://diva.exchange)",
  "license": "GPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "https://codeberg.org/diva.exchange/diva.git"
  },
  "scripts": {
    "css-build": "node_modules/node-sass/bin/node-sass --omit-source-map-url --output-style compressed sass/diva.scss app/static/css/diva.min.css",
    "install": "node -r esm app/bin/install-db",
    "start": "pm2 kill && pm2 start ecosystem.config.js",
    "test": "node_modules/nyc/bin/nyc.js node_modules/mocha/bin/mocha"
  },
  "dependencies": {
    "better-sqlite3": "^7.0.1",
    "bignumber.js": "^9.0.0",
    "compression": "^1.7.4",
    "dateformat": "^3.0.3",
    "@diva.exchange/diva-logger": "^0.2.5",
    "esm": "^3.2.25",
    "express": "~4.17.1",
    "express-session": "^1.17.1",
    "fs-extra": "^9.0.0",
    "grpc": "^1.24.2",
    "http-errors": "~1.7.3",
    "iroha-helpers": "^0.8.9",
    "nanoid": "^3.1.9",
    "pg": "^8.2.1",
    "pug": "^2.0.4",
    "request-promise-native": "^1.0.8",
    "socks-proxy-agent": "^5.0.0",
    "sodium-native": "^3.1.1",
    "utp-punch": "^1.0.1",
    "ws": "^7.3.0"
  },
  "devDependencies": {
    "acorn": ">=7.2.0",
    "bulma": "^0.8.2",
    "chai": "^4.2.0",
    "eslint": "^7.0.0",
    "eslint-config-standard": "^14.1.1",
    "eslint-plugin-import": "^2.20.2",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.2.1",
    "eslint-plugin-standard": "^4.0.1",
    "minimist": ">=1.2.5",
    "mocha": "^7.1.2",
    "node-sass": "^4.14.1",
    "nyc": "^15.0.1",
    "pino-pretty": "^4.0.0",
    "umbrellajs": "^3.1.0"
  },
  "peerDependencies": {
    "pm2": "^4.4.0"
  },
  "mocha": {
    "require": [
      "esm"
    ],
    "recursive": true,
    "spec": "app/test/*.spec.js"
  },
  "nyc": {
    "reporter": [
      "html",
      "text",
      "text-summary"
    ],
    "include": [
      "app/src/**/*.js"
    ],
    "require": [
      "esm"
    ],
    "check-coverage": false,
    "cache": true
  }
}
